function send_welcome(client):
	send_numeric(client, 001, client.nickname, "Welcome to IRC " + client.nickname)
	send_numeric(client, 002, client.nickname, "Your host is " + server.name)
	send_numeric(client, 003, client.nickname, "This server was created " + server.created_time)
	send_numeric(client, 004, client.nickname, server.name, server.version, "o", "nt")

function client.add()
	if client.nick is not NULL and client.user is not NULL
		client.registered = true
		send_welcome_message(client)